{
  "name": "xpack",
  "displayName": "xPack C/C++ Managed Build Tools",
  "description": "Manage and build C/C++ projects with CMake, meson, etc using the xPacks tools.",
  "version": "0.0.1",
  "publisher": "ilg-vscode",
  "license": "MIT",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "cmake",
    "meson",
    "xpack",
    "build",
    "c++"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpack/vscode-xpack-extension-ts.git"
  },
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "bugs": {
    "url": "https://github.com/xpack/vscode-xpack-extension-ts/issues/"
  },
  "homepage": "https://github.com/xpack/vscode-xpack-extension-ts/blob/master/README.md",
  "markdown": "github",
  "icon": "assets/images/icon.png",
  "galleryBanner": {
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "git-log": "git log --pretty='%cd * %h %s' --date=short",
    "fix": "echo fix",
    "package": "vsce ls && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vsce": "^1.87.0",
    "vscode-test": "^1.5.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:xpack.greeting"
  ],
  "contributes": {
    "commands": [
      {
        "command": "xpack.greeting",
        "title": "xPack: Greeting!"
      }
    ]
  }
}
