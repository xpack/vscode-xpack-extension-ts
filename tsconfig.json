{
  /* https://www.typescriptlang.org/tsconfig */
  /* Most option copied from vscode.git/extensions/shared.tsconfig.json */
  /* The maps are used for debugging only. */
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
		"target": "es2018",
		"lib": [
			"es2018"
		],
    "module": "commonjs",
 		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "src-inspiration",
    "node_modules",
    ".vscode-test",
    "tests"
  ]
}